{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      // 1. FRONTEND BUILD: Uses the static builder for your client
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        // Runs the build script in the client directory
        "buildCommand": "npm run build --prefix client",
        "outputDirectory": "dist"
      }
    },
    {
      // 2. BACKEND FUNCTION: Uses the Node.js builder for your API
      "src": "api/index.js",
      "use": "@vercel/node@20.x"
    }
  ],
  "functions": {
    "api/index.js": {
      "runtime": "@vercel/node@20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/:path*",
      "destination": "/client/dist/index.html"
    }
  ]
}


