{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "env": {
    "FORCE_REBUILD": "true"
  },
  "outputDirectory": "client/dist",
  "buildCommand": "cd client && npm install && npm run build",
  "installCommand": "npm install",
  "functions": {
    "api/index.js": {
      "runtime": "vercel/node@20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.js"
    }
  ]
}
